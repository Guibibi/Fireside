[server]
host = "0.0.0.0"
port = 3000
cors_allowed_origins = ["http://localhost:5173", "http://127.0.0.1:5173", "http://localhost:4173", "http://127.0.0.1:4173", "http://localhost:1420", "http://127.0.0.1:1420", "http://localhost:1421", "http://127.0.0.1:1421"]
cors_allowed_methods = ["GET", "POST", "PATCH", "DELETE", "OPTIONS"]
cors_allowed_headers = ["authorization", "content-type"]

# Docker production deployments usually use environment variables instead of this file.

[database]
url = "postgres://yankcord:password@localhost:5432/yankcord"

[jwt]
secret = "change-me-to-a-random-secret"
expiration_hours = 24

[media]
worker_count = 2
webrtc_listen_ip = "0.0.0.0"
# Local LAN testing: use LAN IP. Public VM: use public IP/address.
announced_ip = "127.0.0.1"
# Native RTP ingest for Tauri native screen sender.
native_rtp_listen_ip = "127.0.0.1"
# For remote desktop clients, set to a publicly reachable IP.
native_rtp_announced_ip = "127.0.0.1"

[storage]
backend = "local"
local_root = "data/media"
max_upload_bytes = 10485760
cleanup_interval_seconds = 900
failed_retention_hours = 24

# Tenor GIF search integration (optional)
[integrations]
tenor_api_key = ""

[storage.s3]
endpoint = ""
region = ""
bucket = ""
access_key_id = ""
secret_access_key = ""
force_path_style = false
